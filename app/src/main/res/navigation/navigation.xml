<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splash_graph">
    <navigation
        android:id="@+id/splash_graph"
        app:startDestination="@id/splashFragment">

        <fragment
            android:id="@+id/splashFragment"
            android:name="com.jxareas.jetpack.features.splash.SplashFragment"
            android:label="fragment_splash"
            tools:layout="@layout/fragment_splash" />

    </navigation>

    <navigation
        android:id="@+id/logged_out_graph"
        app:startDestination="@id/loginFragment">

        <fragment
            android:id="@+id/loginFragment"
            android:name="com.jxareas.jetpack.features.login.LoginFragment"
            android:label="fragment_login"
            tools:layout="@layout/fragment_login" />

    </navigation>

    <navigation
        android:id="@+id/logged_in_graph"
        app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.jxareas.jetpack.features.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home" />

    </navigation>


</navigation>